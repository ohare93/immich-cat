{
  "name": "elm-app",
  "version": "0.1.0",
  "scripts": {
    "start-env": "npm run create-env-specific-file && npm run start",
    "create-env-specific-file": "npx envsub -p src/index.html.template src/index.html",
    "start": "npx elm-live src/Main.elm --start-page=src/index.html --host=0.0.0.0 --port=8000 -- --debug --output=dist/main.js",
    "build": "npx elm make src/Main.elm --output=dist/main.js"
  },
  "dependencies": {
    "elm": "^0.19.1",
    "elm-live": "^4.0.2",
    "envsub": "^4.1.0"
  }
}
